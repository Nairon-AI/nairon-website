{
	"installCommand": "bun install",
	"buildCommand": "bunx turbo build --filter=@nairon-website/web",
	"outputDirectory": "apps/web/.vercel/output",
	"headers": [
		{
			"source": "/(.*)\\.(js|css|woff2|woff|ttf|ico|webp|jpg|jpeg|png|svg|avif|mp4)",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=31536000, immutable"
				}
			]
		},
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "X-Frame-Options",
					"value": "DENY"
				},
				{
					"key": "Referrer-Policy",
					"value": "strict-origin-when-cross-origin"
				}
			]
		}
	]
}
