{
	"installCommand": "bun install",
	"buildCommand": "bunx turbo build --filter=@nairon-website/web",
	"outputDirectory": "apps/web/.vercel/output",
	"redirects": [
		{ "source": "/residence", "destination": "/", "permanent": true },
		{ "source": "/apprenticeship", "destination": "/", "permanent": true },
		{ "source": "/hire", "destination": "/", "permanent": true },
		{ "source": "/team", "destination": "/", "permanent": true },
		{ "source": "/contact", "destination": "/", "permanent": true },
		{ "source": "/careers", "destination": "/", "permanent": true },
		{ "source": "/program", "destination": "/", "permanent": true }
	],
	"headers": [
		{
			"source": "/(.*)\\.(js|css|woff2|woff|ttf|ico|webp|jpg|jpeg|png|svg|avif|mp4)",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=31536000, immutable"
				}
			]
		},
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "X-Frame-Options",
					"value": "DENY"
				},
				{
					"key": "Referrer-Policy",
					"value": "strict-origin-when-cross-origin"
				},
				{
					"key": "Strict-Transport-Security",
					"value": "max-age=31536000; includeSubDomains"
				},
				{
					"key": "Permissions-Policy",
					"value": "camera=(), microphone=(), geolocation=()"
				}
			]
		}
	]
}
